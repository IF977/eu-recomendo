<% provide(:title, "Novo Anúncio!") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Eu Recomendo</title>
  </head>
<%= form_for @post, :html => { :multipart => true } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :conteudo %><br>
    <%= f.text_area :conteudo %>
  </div>
  <div class="field">
    <%= f.label :categoria %><br>
    <%= f.text_field :categoria %>
  </div>
  <div class="field">
    <%= f.label :localidade %><br>
    <%= f.text_field :localidade %>
  </div>
    <div class="field">
    <%= f.label :tipo %><br>
    <%= f.text_field :tipo %>
  </div>
  <div class="field">
    <%= f.label :data %><br>
    <%= f.date_select :data %>
  </div>
  <div class="field">
    <%= f.label :imagem %><br>
    <%= f.file_field :imagem %>
  </div>
  <div class="actions">
     <%= f.submit "Postar anúncio", class: "btn btn-primary" %>
  </div>
<% end %>
</html>
